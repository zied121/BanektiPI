<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.HomepageController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <HBox prefHeight="600.0" prefWidth="800.0" spacing="0">
        <!-- Sidebar -->
        <VBox alignment="TOP_LEFT" prefWidth="200.0" spacing="10" styleClass="sidebar">
            <ImageView fitHeight="100.0" fitWidth="150.0">
                <Image url="@logo.png" />
            </ImageView>
            <VBox spacing="5">
                <Button styleClass="navButton" text="Home" />
                <Button styleClass="navButton" text="Users" />
                <Button styleClass="navButton" text="Credits" onAction="#handlecreditButtoncredituser"/>
                <Button styleClass="navButton" text="Assurance" onAction="#handleButtonAssurance" />
                <Button styleClass="navButton" text="Operation" />
                <Button styleClass="navButton" text="Create Account" />
                <Button styleClass="navButton" text="Settings" />
            </VBox>
        </VBox>

        <!-- Main Content -->
        <VBox spacing="20" styleClass="main-container">
            <HBox styleClass="header">
                <Label text="Welcome, " styleClass="welcome-label"/>
                <Label fx:id="userNameLabel" styleClass="username-label"/>
            </HBox>
            <TableView fx:id="accountsTable" styleClass="accounts-table">
                <columns>
                    <TableColumn fx:id="ribColumn" text="RIB" styleClass="table-column"/>
                    <TableColumn fx:id="soldeColumn" text="Solde" styleClass="table-column"/>
                    <TableColumn fx:id="statusColumn" text="Status" styleClass="table-column"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</AnchorPane>