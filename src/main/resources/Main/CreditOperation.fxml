<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.CreditOperationController">
    <stylesheets>
        <URL value="@CreditOperation.css" />
    </stylesheets>

    <HBox spacing="0" prefHeight="600.0" prefWidth="800.0">
        <!-- Sidebar -->
        <VBox spacing="10" alignment="TOP_LEFT" prefWidth="200.0" styleClass="sidebar">
            <ImageView fitWidth="150.0" fitHeight="100.0">
                <Image url="@logo.png" />
            </ImageView>
            <VBox spacing="5">
                <Button text="Home" styleClass="navButton"/>
                <Button text="Users" styleClass="navButton"/>
                <Button text="Credits" styleClass="navButton"/>
                <Button text="Assurance" styleClass="navButton"/>
                <Button text="Operation" styleClass="navButton"/>
                <Button text="Create Account" styleClass="navButton"/>
                <Button text="Settings" styleClass="navButton"/>
            </VBox>
        </VBox>

        <!-- Main Content -->
        <AnchorPane prefWidth="600.0">
            <VBox spacing="10" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0">
                <Label text="Credit Operation" styleClass="header"/>
                <VBox spacing="10" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <TextField fx:id="idCompteField" promptText="Account ID" />
                    <TextField fx:id="typeCreditField" promptText="Type of Credit" />
                    <TextField fx:id="montantField" promptText="Amount" />
                    <TextField fx:id="dateDebutField" promptText="Start Date (YYYY-MM-DD)" />
                    <TextField fx:id="dateFinField" promptText="End Date (YYYY-MM-DD)" />
                    <TextField fx:id="tauxInteretField" promptText="Interest Rate" />
                    <ComboBox fx:id="statutCombo" promptText="Status">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Active"/>
                                <String fx:value="Inactive"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <TextField fx:id="modePaiementField" promptText="Payment Mode" />
                    <Button text="Check account" onAction="#handleCheckAccount" styleClass="checkButton"/>
                </VBox>
            </VBox>
        </AnchorPane>
    </HBox>
</AnchorPane>
