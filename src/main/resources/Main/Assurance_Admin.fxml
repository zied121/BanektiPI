<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>

<?import javafx.scene.control.ComboBox?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.AssuranceController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox spacing="0" prefHeight="600.0" prefWidth="800.0">
        <!-- Sidebar -->
        <VBox spacing="10" alignment="TOP_LEFT" prefWidth="200.0" styleClass="sidebar">
            <ImageView fitWidth="150.0" fitHeight="100.0">
                <Image url="@logo.png" />
            </ImageView>
            <VBox spacing="5">
                <Button text="Home" styleClass="navButton"/>
                <Button text="Users" styleClass="navButton"/>
                <Button text="Credits" styleClass="navButton"/>
                <Button text="Assurance" styleClass="navButton" />
                <Button text="Operation" styleClass="navButton"/>
                <Button text="Create Account" styleClass="navButton"/>
                <Button text="Settings" styleClass="navButton"/>
            </VBox>
        </VBox>

        <!-- Main Content -->
        <AnchorPane prefWidth="600.0">
            <VBox spacing="10" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0">
                <Label text="Manage Assurances" styleClass="header"/>
                <TableView fx:id="assuranceTable" prefHeight="400.0" prefWidth="600.0">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0">
                            <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="idUserColumn" text="ID User" prefWidth="100.0">
                            <cellValueFactory><PropertyValueFactory property="idUser"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="100.0">
                            <cellValueFactory><PropertyValueFactory property="type"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="dateDebutColumn" text="Date Debut" prefWidth="100.0">
                            <cellValueFactory><PropertyValueFactory property="dateDebut"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="dateFinColumn" text="Date Fin" prefWidth="100.0">
                            <cellValueFactory><PropertyValueFactory property="dateFin"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0">
                            <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Label text="Statut"/>
                    <ComboBox fx:id="statusField">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Approved"/>
                                <String fx:value="Rejected"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Button text="Update Status" onAction="#handleUpdateStatus"/>
                    <Button text="Delete Assurance" onAction="#handleDeleteAssurance"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </HBox>
</AnchorPane>
