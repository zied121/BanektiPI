<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UpdateDelete">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox prefHeight="600.0" prefWidth="800.0" spacing="0">
        <!-- Sidebar -->
        <VBox alignment="TOP_LEFT" prefWidth="200.0" spacing="10" styleClass="sidebar">
            <ImageView fitHeight="100.0" fitWidth="150.0">
                <Image url="@logo.png" />
            </ImageView>
            <VBox spacing="5">
                <Button styleClass="navButton" text="Home" />
                <Button styleClass="navButton" text="Users" />
                <Button styleClass="navButton" text="Credits" />
                <Button styleClass="navButton" text="Assurance" />
                <Button styleClass="navButton" text="Operation" />
                <Button styleClass="navButton" text="Create Account" />
                <Button styleClass="navButton" text="Settings" />
            </VBox>
        </VBox>

        <!-- Main Content -->
        <AnchorPane prefWidth="600.0">
            <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="10">
                <Label styleClass="header" text="Liste des reclamations" />
                <TableView fx:id="RecTable" prefHeight="400.0" prefWidth="600.0">
                    <columns>
                        <TableColumn text="Type" fx:id="typeColumn" />
                        <TableColumn prefWidth="126.4000244140625" text="Description" fx:id="descriptionColumn" />
                        <TableColumn minWidth="4.79998779296875" prefWidth="91.99993896484375" text="Statut" fx:id="statutColumn" />
                        <TableColumn prefWidth="126.4000244140625" text="Reponse" fx:id="reponseColumn" />
                        <TableColumn prefWidth="78.4000244140625" text="Date" fx:id="dateColumn" />
                    </columns>
                </TableView>
                <VBox spacing="10">
                    <HBox spacing="10">
                        <Button onAction="#modifierRec" text="Modifier" />
                        <Button onAction="#DeleteRec" text="Supprimer" />
                        <Button onAction="#action_ajouter" text="Ajouter" />

                    </HBox>
                    <Label text="Détails de la demande sélectionnée" />
                    <HBox spacing="10">
                        <Label text="Type:" />
                        <ComboBox fx:id="typeComboBox">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Service clientele" />
                                    <String fx:value="Remboursement" />
                                    <String fx:value="Validite carte" />
                                    <String fx:value="autres" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Description:" />
                        <TextField fx:id="descriptionField" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Statut:" />
                        <TextField fx:id="statutField" disable="true" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Date:" />
                        <TextField fx:id="dateField" disable="true" />
                    </HBox>
                </VBox>
            </VBox>
        </AnchorPane>
    </HBox>
</AnchorPane>
