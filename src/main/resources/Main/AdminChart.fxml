<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AdminChart">
    <stylesheets>
        <URL value="@styleFile.css" />
    </stylesheets>

    <HBox prefHeight="800.0" prefWidth="800.0" spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"> <!-- Ajout des ancres -->
        <!-- Sidebar -->
        <VBox alignment="TOP_LEFT" prefWidth="200.0" spacing="10" styleClass="sidebar">
            <ImageView fitHeight="100.0" fitWidth="150.0">
                <Image url="@logo.png" />
            </ImageView>
            <VBox spacing="5">
                <Button text="Home" styleClass="navButton" onAction="#handlehomeButton"/>
                <Button text="Users" styleClass="navButton" onAction="#handleusersButton"/>
                <Button text="Credits" styleClass="navButton" onAction="#handlecreditButton"/>
                <Button text="Assurance" styleClass="navButton" onAction="#handleassuranceButton"/>
                <Button text="Document" styleClass="navButton" onAction="#handledocumentButtonuser"/>
                <Button text="Réclamation" styleClass="navButton" onAction="#handlereclamationButtonuser"/>
                <Button text="Déconnecter" styleClass="navButton" onAction="#handlesignout"/>
            </VBox>
        </VBox>

        <!-- Main Content -->
    <StackPane alignment="CENTER" prefWidth="800.0" prefHeight="400.0">
        <VBox fx:id="pieChartContainer" alignment="TOP_CENTER" spacing="10">
            <Label text="Statut des reclamations" styleClass="titleLabel"/>
            <PieChart fx:id="pieChart" prefHeight="100.0" prefWidth="1200.0" />
            <Button onAction="#GoToAdmin" styleClass="recbutton" text="Passer >>"
                    prefHeight="60.0" prefWidth="300.0" />
        </VBox>
    </StackPane>

</HBox>
</AnchorPane>