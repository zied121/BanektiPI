<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.GestionUserController">
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TableView fx:id="userTable">
                <columns>
                    <TableColumn fx:id="userIdColumn" text="User ID" />
                    <TableColumn fx:id="firstNameColumn" text="First Name" />
                    <TableColumn fx:id="lastNameColumn" text="Last Name" />
                    <TableColumn fx:id="emailColumn" text="Email" />
                    <TableColumn fx:id="typeColumn" text="Type" />
                </columns>
            </TableView>
            <HBox spacing="10">
                <TextField fx:id="firstNameField" promptText="First Name" />
                <TextField fx:id="lastNameField" promptText="Last Name" />
                <TextField fx:id="emailField" promptText="Email" />
                <TextField fx:id="passwordField" promptText="Password" />
                <TextField fx:id="typeField" promptText="Type (client)" />
            </HBox>
            <HBox spacing="10">
                <Button text="Add" onAction="#handleAddUser" />
                <Button text="Update" onAction="#handleUpdateUser" />
                <Button text="Delete" onAction="#handleDeleteUser" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
