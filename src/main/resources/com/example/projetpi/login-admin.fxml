<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.LoginAdminController" stylesheets="@login.css">
    <children>
        <HBox>
            <children>
                <VBox alignment="CENTER" spacing="20.0" styleClass="left-pane">
                    <children>


                        <Label text="Banekti" styleClass="title" />
                        <Label text="YOUR Bank in one Click" styleClass="subtitle" />
                        <Label text="Copyright (c). All Rights Reserved." styleClass="copyright" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="20.0" styleClass="right-pane">
                    <children>
                        <Label text="Welcom Admin" styleClass="login-title" />
                        <GridPane hgap="10" vgap="10" alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints minWidth="100" />
                                <ColumnConstraints minWidth="200" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="40" />
                                <RowConstraints minHeight="40" />
                                <RowConstraints minHeight="40" />
                                <RowConstraints minHeight="40" />
                            </rowConstraints>
                            <children>
                                <Label text="Admin Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="adminEmailField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label text="Admin Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <PasswordField fx:id="adminPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Button fx:id="adminLoginButton" text="Login" onAction="#handleAdminLoginButtonAction" styleClass="login-button" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.halignment="CENTER" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
